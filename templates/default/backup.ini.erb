[Misc]
snapshotName = <%= node[:domain].gsub('.', '_') %>_<%= @dbname %>
verticaConfig = False
restorePointLimit = 3
tempDir = /tmp/vbr
retryCount = 1
retryDelay = 1

[Database]
dbName = <%= @dbname %>
dbUser = <%= @user %>
dbPassword = <%= @password %>

